{
    "name": "nascom/toerisme-werkt-api-client",
    "description": "PHP client for the Toerisme Werkt API",
    "type": "library",
    "license": "MIT",
    "keywords": ["Toerisme Werkt", "API"],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/serializer": "~3.2|^4.0",
        "symfony/property-access": "~3.2|^4.0"
    },
    "autoload": {
        "psr-4": {
            "Nascom\\ToerismeWerktApiClient\\":  ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Nascom\\ToerismeWerktApiClient\\": "spec/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "require-dev": {
        "phpspec/phpspec": "^4.3",
        "symfony/var-dumper": "^4.0"
    }
}
